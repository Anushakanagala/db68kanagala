extends layout

block content
  h1= title
  - let destination1 = `dispatch(\"/lion/update?")`
  button.btn( class="btn-primary ml-1", onclick= destination1) View
  
    - let lion  = results
  div(class="container-fluid mt-3")
  div(class="row m-1")
    each i ,index in lion  
     - let destination = `dispatch(\"/lion/update?id=${i._id}\")`
     - let destination1 = `dispatch(\"/lion/delete?id=${i._id}\")`
       div(class="col-sm-4")  #{i.name} - #{i.age} -#{i.breed}
       button.btn( class="btn-primary ml-1", onclick= destination) Detail
       button.btn( class="btn-success ml-1", onclick= destination) Update
       button.btn( class="btn-danger ml-1", onclick= destination1) delete
     
  script.
     
      function buy(itemNo)
      {
        alert(`You purchased Item ${itemNo+1}`)
      }
      function dispatch(path)
      {
        window.location.href=path
      }  