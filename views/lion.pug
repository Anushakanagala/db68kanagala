extends layout

block content
  div(class="container-fluid")
  h1= title
  - let results=[{name:"Nara",age:"12",breed:"Indian"},{name:"Abhi",age:"25",breed:"Asian"},{name:"lara",age:"23",breed:"American"}] 
  div(class="row")
    each form,index in results
        div(class = "col-sm-2 bg-primary" onclick=`buy(${index})`) #{form.name}
        div(class = "col-sm-2 bg-primary" onclick=`buy(${index})`) #{form.age}
        div(class = "col-sm-2 bg-primary" onclick=`buy(${index})`) #{form.breed}
  script.
     
      function buy(itemNo)
      {
        alert(`You purchased Item ${itemNo+1}`)
      }